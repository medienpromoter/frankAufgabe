<style>
    .customcheck .form-check-input[type="checkbox"] {
        position: absolute;
        opacity: 0;
    }

    .customcheck .form-check-label::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 1.25rem;
        height: 1.25rem;
        background-color: #fff;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
    }

    .customcheck .form-check-input:checked ~ .form-check-label::before {
        background-color: #007bff;
        border-color: #007bff;
    }

    .customcheck .form-check-input:checked ~ .form-check-label::after {
        content: '\2713'; /* Unicode checkmark symbol */
        position: absolute;
        top: 0.25rem;
        left: 0.375rem;
        font-size: 1rem;
        color: #fff;
    }

    .customcheck .form-check-label {
        padding-left: 2.5rem;
        cursor: pointer;
    }
</style>

<div class="col-md-3">
{{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
</div>
