{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>User</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rollen</th>
                <td>
                    {% if 'ROLE_ADMIN' in user.roles %}
                        Admin
                    {% else %}
                        Nutzer
                    {% endif %}
                </td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Zurück zur Übersicht</a>

        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Bearbeiten</a>

        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
